# Industrial Monitoring Platform - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Timezone
TIMEZONE=UTC

# InfluxDB Configuration
INFLUX_USERNAME=admin
INFLUX_PASSWORD=changeme_secure_password
INFLUX_ORG=industrial_monitoring
INFLUX_BUCKET=industrial_metrics
INFLUX_RETENTION=30d
INFLUX_TOKEN=changeme_generate_secure_token

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_secure_password
GRAFANA_ROOT_URL=http://localhost:3000

# MQTT Configuration (for future authentication)
MQTT_USERNAME=sensor_client
MQTT_PASSWORD=changeme_mqtt_password
